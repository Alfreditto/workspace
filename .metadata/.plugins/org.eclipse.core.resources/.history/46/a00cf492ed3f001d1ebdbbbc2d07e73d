package prueba;

import java.io.*;

public class Act1_45_Leer {

	public static void main(String[] args) throws IOException {
		File fichero = new File("AleatorioEmple.dat");
		char[] nombre = new char[15];
		char[] localidad = new char[18];
		int dep;
		String nombres, localidada;

		RandomAccessFile file = new RandomAccessFile(fichero, "r");

		System.out.println("Tamaño arichivo: " + fichero.length());

		while (file.getFilePointer() < file.length()) {
			dep = file.readInt();

			for (int i = 0; i < nombre.length; i++) {
				nombre[i] = file.readChar();
			}
			nombres = new String(nombre);

			for (int i = 0; i < localidad.length; i++) {
				localidad[i] = file.readChar();
			}
			localidada = new String(localidad);

System.out.printf("Departamento: %d, nombre: %s, localidad: %s\n", dep, nombre.toString(), localidad.toString());
		}

		file.close();

	}

}
